<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.mangel.lectortickets">

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:largeHeap="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".TicketRecognitionActivity"
            android:label="@string/title_activity_reconocedor"
            android:windowSoftInputMode="adjustPan"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".TicketActivity"
            android:label="@string/title_activity_ticket"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".LoginActivity"
            android:label="@string/title_activity_login"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".SignUpActivity"
            android:label="@string/title_activity_sign_up"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".DatePickerActivity"
            android:label="@string/title_activity_date_picker"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>
        <activity android:name=".TimePickerActivity"
            android:label="@string/title_activity_time_picker"
            android:configChanges="orientation"
            android:screenOrientation="portrait"/>

    </application>

</manifest>